#r: ## HRUN
#r:
#h: Usage: $0 [OPTIONS...] PROGRAM [ARGS...]
#h:
#h: This program helps executing programs for debugging. You can specify
#h: a different prefix, run it with GDB/VALGRIND/STRACE and add a breakpoint
#h: in a function.
#h:
#h: -g        : Run with GDB.
#h: -m        : Run with Valgrind (./valgrind.log)
#h: -s        : Run with strace.
#h: -v        : Show variables.
#h: -b FUNC   : Put a breakpoint in function.
#h: -p PREFIX : Run on prefix.
#r:
hrun() {
    ## Parse command line arguments.
    local OPTIND optopt= ops=
    while getopts "vlp:gmsb:" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            g)  export HRUN_ENABLE_GDB=y                   ;;
            m)  export HRUN_ENABLE_VALGRIND=y              ;;
            s)  export HRUN_ENABLE_STRACE=y                ;;
            b)  export HRUN_GDB_COMMANDS="break ${OPTARG}" ;;
            p)  export HRUN_PREFIX="${OPTARG}"             ;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    case "${ops}" in *v*) hrun_show_variables;; esac
    if test -n "$1";then
        export LD_LIBRARY_PATH="${HRUN_PREFIX}/lib64:${HRUN_PREFIX}/lib${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}"
        export PATH="${HRUN_PREFIX}/bin:${HRUN_PREFIX}/sbin${PATH:+:}${PATH}"
        hrun_exec "$@"
    fi
}
## ---------------------------------------------------------------------------
hrun_show_variables() {
    printf '\n## OPTIONS\n\n' 
    printf '%-20s: %s\n' HRUN_ENABLE_GDB      "${HRUN_ENABLE_GDB}"
    printf '%-20s: %s\n' HRUN_ENABLE_VALGRIND "${HRUN_ENABLE_VALGRIND}"
    printf '%-20s: %s\n' HRUN_PREFIX          "${HRUN_PREFIX}"
    printf '%-20s: %s\n' GDB                  "${GDB}"
    printf '%-20s: %s\n' VALGRIND             "${VALGRIND}"
    printf '%-20s: %s\n' STRACE               "${STRACE}"
    printf '\n'
}
hrun_calc_variables() {
    HRUN_ENABLE_GDB="${HRUN_ENABLE_GDB:-n}"
    HRUN_ENABLE_VALGRIND="${HRUN_ENABLE_VALGRIND:-n}"
    HRUN_PREFIX="${HRUN_PREFIX:-/usr/local}"
    GDB="/usr/bin/gdb"
    VALGRIND="valgrind"
    STRACE="strace"
}


## ---------------------------------------------------------------------------
hrun_exec() {
    local executable="`which "${1}"`"
    shift
    if test @"${HRUN_ENABLE_STRACE}" = @"y";then
        "${STRACE}" "${executable}" "$@"
    elif test @"${HRUN_ENABLE_GDB}" = @"y";then
        LANG="en_EN.utf8" "${GDB}" -q  \
            -ex "start"                \
            -ex "${HRUN_GDB_COMMANDS}" \
            -ex "continue"             \
            -ex "backtrace"            \
             --args                    \
            "${executable}" "$@"
        # Emacs: -i=mi -ex "start" -ex "record btrace pt" --args "${executable}" "$@"
    elif test @"${HRUN_ENABLE_VALGRIND}" = @"y";then
        LANG="en_EN.utf8" "${VALGRIND}" \
            --leak-check=full           \
            --log-file="valgrind.log"   \
            "${executable}" "$@"
    else
        "${executable}" "$@"
    fi
}





## ---------------------------------------------------------------------------
hrun_calc_variables
if test @"`basename "$0"`" = @"hrun";then
    if test -n "$1";then
        hrun "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
